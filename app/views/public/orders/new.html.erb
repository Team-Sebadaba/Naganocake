<div class="row">
  <div class="col-md-10 offset-2">
    <strong>注文情報入力</strong>
  </div>
</div>

<%= form_with model: @order, url: orders_new_path, local: true do |f| %>
<div class="row">
  <div class="col-md-12">
    <h4>支払方法</h4>
      <div>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      </div>
      <div>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h4>お届け先</h4>
      <%= f.radio_button :dest, "0" %>
      <%= f.label :dest, "ご自身の住所", value: 0 %><br>
      <%= current_customer.destination_display %><br><%= current_customer.name_display %>

      <%= f.radio_button :dest, "1" %>
      <%= f.label :dest, "登録先住所から選択", value: 1 %><br>
      <%= f.select :destination, options_from_collection_for_select(:registered, current_customer.destination.all, :id, :destination_display) %>

      <%= f.radio_button :dest, "2" %>
      <%= f.label :dest, "新しいお届け先", value: 2 %>

      <div class="form-group form-inline">
        <label for="input-name" class="col-md-3">郵便番号(ハイフンなし)</label>
        <div class="col-md-9"><%= f.text_field :postal %></div>
      </div>
      <div class="form-group form-inline">
        <label for="input-name" class="col-md-3">住所</label>
        <div class="col-md-9"><%= f.text_field :address %></div>
      </div>
      <div class="form-group form-inline">
        <label for="input-name" class="col-md-3">宛名</label>
        <div class="col-md-9"><%= f.text_field :to_name %></div>
      </div>

    <div class="mx-auto">
      <span><%= f.submit "確認画面へ進む", class: "btn btn-primary" %></span>
    </div>
  </div>
</div>
<% end %>