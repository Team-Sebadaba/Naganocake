<h2>注文履歴詳細</h2>

 <h6>注文情報</h6>
  <table>
   <tr>
     <td>注文日</td>
     　 <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <td>配送先</td>
       <td>〒<%= @order.shipping_postal %></td>
       <td><%= @order.shipping_address %></td>
       <td><%= @order.shipping_name %></td>
   </tr>
   <tr>
     <td>支払方法</td>
       <td><%= @order.payment_i18n %></td>
   </tr>
   <tr>
     <td>ステータス</td>
      <td><%= @order.order_status_i18n %></td>
   </tr>
  </table>

 <h6>請求情報</h6>
  <table>
    <tr>
      <td>商品合計</td>
       <td><%= @total.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>配送料</td>
       <td><%= postage = 800 %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
       <!--<td>% total_price = @order.total + @order.potage %></td>-->
      <td><% (@total + postage).to_s(:delimited) %></td>
    </tr>
  </table>

 <h6>注文内容</h6>
  <thead>
     <tr>
       <th>商品</th>
       <th>単価(税込)</th>
       <th>個数</th>
       <th>小計</th>
     </tr>
   </thead>
    <% @order.details.each do |detail| %>
     <tr>
       <td><%= detail.item.item_name %></td>
       <td><%= detail.item.with_tax_price.to_s(:delimited) %></td>
       <td><%= detail.amount %></td>
       <!--<td>% total_price = order_detail.item.with_tax_price * order_detail.amout %></td>-->
       <td><%= detail.price %></td>
       <% @total = @total + detail.price %>
     </tr>
    <% end %>