<h2>注文履歴詳細</h2>

 <h6>注文情報</h6>
  <table>
   <tr>
     <td>注文日</td>
     　 <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <td>配送先</td>
       <td>〒<%= @order.shipping_postal %></td>
       <td><%= @order.shipping_address %></td>
       <td><%= @order.shipping_name %></td>
   </tr>
   <tr>
     <td>支払方法</td>
       <td><%= @order.payment_method_i18n %></td>
   </tr>
   <tr>
     <td>ステータス</td>
      <td><%= @order.order_status_i18n %></td>
   </tr>
  </table>

 <h6>請求情報</h6>
  <table>
    <tr>
      <td>商品合計</td>
       <td><%= @order.total.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>配送料</td>
       <td><%= @order.postage.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td>請求額</td>
       <!--<td>% total_price = @order.total + @order.potage %></td>-->
      <td><% total_price = @order.total_price %></td>
       <td><%= total_price.to_s(:delimited) %></td>
    </tr>
  </table>

 <h6>注文内容</h6>
  <thead>
     <tr>
       <th>商品</th>
       <th>単価(税込)</th>
       <th>個数</th>
       <th>小計</th>
     </tr>
   </thead>
    <% @order_detils.each do |order_detail| %>
     <tr>
       <td><%= order_detail.item.name %></td>
       <td><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
       <td><%= order_detail.amount %></td>
       <!--<td>% total_price = order_detail.item.with_tax_price * order_detail.amout %></td>-->
       <td><% total_price = order_detail.price %></td>
        <td><%= total_price.to_s(:delimited) %></td>
     </tr>

