<div class="row">
  <div class="col-md-10 offset-2">
    <strong>注文情報確認</strong>
  </div>
</div>

<div class="row">

  <div class="col-md-8">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th class="col-md-3">商品名</th>
            <th class="col-md-1">単価(税込)</th>
            <th class="col-md-1">数量</th>
            <th class="col-md-1">小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <td>
            <%= image_tag item.get_image(40,30) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(delimited) %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= cart_item.subtotal.to_s(delimited) %></td>
          <%= @total = @total + cart_item.subtotal %>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table tavle-hover table-bordered">
        <tr><th class="col-md-2">送料</th><td class="col-md-2"><%= postage = 800 %></td></tr>
        <tr><th class="col-md-2">商品合計</th><td class="col-md-2"><% @total.to_s(delimited) %></td></tr>
        <tr><th class="col-md-2">請求金額</th><td class="col-md-2"><%= (@total + posatage).to_s(delimited) %></td></tr>
      </table>
    </div>

</div>

<div class="row">
  <div class="col-md-12 text-inline">
    <h4>支払方法</h4><p><%= order.payment %></p>
  </div>
  <div class="col-md-12 text-inline">
    <h4>お届け先</h4>
    <div><%= order.shopping_postal %><%= order.shopping_address %><br><%= order.shopping_name %></div>
  </div>
</div>

<div class="row">
  <div class="mx-auto">
  <%= form_with model: @order, url: orders_create_path, local: true do |f| %>
    <%= f.hidden_field :payment %>
    <%= f.hidden_field :shopping_postal %>
    <%= f.hidden_field :shopping_address %>
    <%= f.hidden_field :shopping_name %>
    <%= f.hidden_field :total, value: (@total + posatage).to_s(delimited) %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  <% end %>
  </div>
</div>