<h4>注文履歴一覧</h4>
<div class = "row" >
 <div class = "col-12" >
  <table class = "table table-bordered">
   <thead>
     <tr>
       <th class = "col-1">注文日</th>
       <th class = "col-4">配送先</th>
       <th class = "col-2">注文商品</th>
       <th class = "col-1">支払金額</th>
       <th class = "col-1">ステータス</th>
       <th class = "col-1">注文詳細</th>
     </tr>
   </thead>

   <tbody>
   <% @orders.each do |order| %>
    <tr>
     <td class = "text-center"><%= order.created_at.strftime('%Y/%m/%d') %></div></td>
     <td>
       〒<%= order.shipping_postal %><br>
         <%= order.shipping_address %><br>
         <%= order.shipping_name %>
     </td>
     <td>
       <% order.details.each do |order| %>
        <%= order.item.item_name %><br>
       <% end %>
     </td>
     <td>
       <%= order.total %>
     </td>
     <td>
     <%= order.order_status_i18n %>
     </td>
     <td>
      <%= link_to "表示する", show_orders_path(order.id), class: "btn btn-primary btn-sm" %>
     </td>
    </tr>
   <% end %>
   </tbody>
  </table>
 </div>
</div>
