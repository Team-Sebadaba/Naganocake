<h2>注文履歴一覧</h2>
 <table>
   <thead>
     <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
     </tr>
   </thead>

   <tbody>
   <% @orders.each do |order| %>
    <tr>
     <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
     <td>
       〒<%= order.shipping_postal %><br>
         <%= order.shipping_address %><br>
         <%= order.shipping_name %>
     </td>
     <td>
       <% order.details.each do |order| %>
        <%= order.item.item_name %>
       <% end %>
     </td>
     <td>
       <%= order.total %>
       <%= order.order_status_i18n %>
       <%= link_to "表示する", show_orders_path(order.id), class: "btn btn-primary btn-sm" %>
     </td>
    </tr>
   <% end %>
   </tbody>
 </table>
