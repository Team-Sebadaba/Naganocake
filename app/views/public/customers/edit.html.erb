<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h5 class = "mt-3 mb-3 ml-5">会員情報編集</h5>

 <div class = "row" >
  <div class = "col-7" >
   <h6>氏名</h6>
   <h6>カナ</h6>
   <h6>郵便番号</h6>
   <h6>住所</h6>
   <h6>電話番号</h6>
   <h6>メールアドレス</h6>
  </div>

  <%= form_with model: @customer, url: '/customers/infomation', method: :patch, local: true do |f| %>
   <tr>
    <td>氏名</td>
    <td><%= f.text_field :last_name, autofocus: true %><%= f.text_field :first_name %></td>
   </tr>
   <tr>
    <td>カナ</td>
    <td><%= f.text_field :last_furigana %><%= f.text_field :first_furigana %></td>
   </tr>
   <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal %></td>
   </tr>
   <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
   </tr>
   <tr>
    <td>電話番号</td>
    <td><%= f.text_field :tel %></td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td><%= f.email_field :email, class: "form-control" %></td>
   </tr>
  </table>
 </div>
</div>

<div class = "row" >
 <div class = "col-3 ml-5" >
  <%= f.submit "編集内容を保存", class: "btn btn-success" %>
 </div>
 <div class = "col-2"></div>
  <%= link_to "退会する", withdraw_customer_path(current_customer.id), method: :patch, class: "btn btn-success", data: { confilm: "本当に退会しますか？" } %>
 </div>
</div>

 <% end %>