<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h6 class = mb-6>会員情報編集</h6>
  <%= form_with model: @customer, url: '/customers/infomation', method: :patch, local: true do |f| %>

<div class = "row" >
 <div class = "col-7" >
  <table class = "table table-bordered">
   <tr>
    <td>氏名</td>
    <td><%= f.text_field :last_name, autofocus: true %><%= f.text_field :first_name %></td>
   </tr>
   <tr>
    <td>カナ</td>
    <td><%= f.text_field :last_furigana %><%= f.text_field :first_furigana %></td>
   </tr>
   <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :postal %></td>
   </tr>
   <tr>
    <td>住所</td>
    <td><%= f.text_field :address %></td>
   </tr>
   <tr>
    <td>電話番号</td>
    <td><%= f.text_field :tel %></td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td><%= f.email_field :email %></td>
   </tr>
  </table>
 </div>
</div>

  <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  <%= link_to "退会する", class: 'btn btn-danger'%>

 <% end %>