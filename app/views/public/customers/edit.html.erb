<div class="container">
 <h2>会員情報編集</h2>

  <% if @customer.errors.any? %>
   <%= @customer.errors.count %>error prohibited this obj from being saved:
   <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
 <% end %>

  <%= form_with model: @customer, url: '/customers/infomation', method: :patch, local: true do |f| %>

  <div class="field">
   <%= f.label :氏名 %>
   <%= f.text_field :last_name, autofocus: true %>
   <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
   <%= f.label :フリガナ %>
   <%= f.text_field :last_furigana, autofocus: true %>
   <%= f.text_field :first_furigana, autofocus: true %>
  </div>

  <div class="field">
   <%= f.label :郵便番号 %>
   <%= f.text_field :postal, autofocus: true%>
  </div>

  <div class="field">
   <%= f.label :住所 %>
   <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
   <%= f.label :電話番号 %>
   <%= f.text_field :tel, autofocus: true %>
  </div>

  <div class="field">
   <%= f.label :メールアドレス %>
   <%= f.email_field :email, autofocus: true %>
  </div>

  <%= f.submit "編集内容を保存", class: "btn btn-success" %>

<% end %>

   <%= link_to "退会する", class: 'btn btn-danger ml-5'%>