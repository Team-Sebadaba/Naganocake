<div class="container my-5">
  <div class="row">

    <div class="col-md-9">

      <div class="row">
        <div class="col-md-12 my-5">
          <h3>商品一覧</h3>
          <span>(全<%#= item.count %>件)</span>
        </div>
        <div class="col-md-3 my-3 bg-dark">
          <%# @items.each do |item| % いずれもitem実装後に表示>
            <%#= link_to "show", item_path(item.id) do %>
              <%#= image_tag item(120,90) %><br>
              <%#= item.item_name %><br>
              <%#= item.non_taxed %>
            <%# end %>
          <%# end %>
          <%#= paginate @items %>
        </div>
      </div>

    </div>

    <div class="col-md-3">
      <ul class="list-group">
        <h5>ジャンル一覧</h5>
        <%#= @genres.each do |genre| %>
          <%#li class="list-group-item"><%= genre.name %><%#/li>
        <%# end %>
      </ul>
    </div>

  </div>
</div>