<div class="row">
  <div class="col-md-9">

    <div class="row">
      <div class="col-md-12">
        <h3 class="title" style="font-weight: bold;">商品一覧<span class="item_count">(全<%= @items.count %>件)</span></h3>
      </div>
      <% @items.each do |item| %>
        <div class="col-md-3 my-3">
          <%= link_to show_items_path(item.id) do %>
            <%= image_tag item.get_image(200,140) %><br>
            <p class="title" style="font-weight: bold;"><%= item.item_name %></p>
            <p class="title" style="font-weight: bold;">¥<%= item.with_tax_price.to_s(:delimited) %></p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="row float-right ">
      <%= link_to "全ての商品を見る >", items_path %>
    </div>
  </div>

  <div class="col-md-3">
    <%= render 'genres_list', genres: @genres %>
  </div>
</div>

<!--ページネーション実装-->
<%= render 'layouts/footer', obj: @items %>