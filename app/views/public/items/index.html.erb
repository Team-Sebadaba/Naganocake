<div class="row">
  <div class="col-md-10">

    <div class="row">
      <div class="col-md-12 mb-5">
        <h3>商品一覧<span class="item_count">(全<%= @items.count %>件)</span></h3>
      </div>
      <% @items.each do |item| %>
        <div class="col-md-3 my-3">
          <%= link_to items_path(item.id) do %>
            <%= image_tag item.get_image(200,140) %><br>
            <%= item.item_name %><br>
            <%= item.non_taxed %>
          <% end %>
        </div>
      <% end %>
    </div>
  <!--<dev class = "row">-->
  <!--  %= paginate @items %>-->
  <!--</dev>-->
  </div>
  
  <div class="col-md-2">
    <%= render 'genres_list', genres: @genres %>
  </div>
</div>

<!--ページネーション実装-->
<%= render 'layouts/footer', obj: @items %>