<div class="container my-5">
  <div class="row">

    <div class="col-md-9">

      <div class="row">
        <div class="col-md-12 mb-5">
          <h3>商品一覧</h3>
          <span>(全<%= @items.count %>件)</span>
        </div>
        <div class="col-md-3 my-3">
        <% @items.each do |item| %>
          <%= link_to items_path(item.id) do %>
            <%= image_tag item.get_image(120,90) %><br>
            <%= item.item_name %><br>
            <%= item.non_taxed %>
          <% end %>
        <% end %>
        <%= paginate @items %>
        </div>
      </div>

    </div>

    <div class="col-md-3">
      <ul class="list-group">
        <h5>ジャンル一覧</h5>
          <li class="list-group-item">ケーキ</li>
          <li class="list-group-item">焼き菓子</li>
          <li class="list-group-item">プリン</li>
          <li class="list-group-item">キャンディ</li>
        <%#= @genres.each do |genre| %>
          <%#li class="list-group-item"><%= genre.name %><%#/li>
        <%# end %>
      </ul>
    </div>

  </div>
</div>