<h1>配送先編集</h1>
 <%= form_with model: @destination, url: destinations_path, method: :patch, local: true do |f| %>

　<div class="field">
   <%= f.label :郵便番号 %>
   <em>(ハイフンなし)</em>
   <%= f.text_field :postal %>
  </div>

  <div class="field">
   <%= f.label :住所 %>
   <%= f.text_field :address %>
  </div>

  <div class="field">
   <%= f.label :宛名 %>
   <%= f.text_field :name %>
  </div>

 <%= f.submit "変更内容を保存", class: "btn btn-success" %>
 <% end %>
