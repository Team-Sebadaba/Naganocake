<% if @destination.errors.any? %>
  <%= @destination.errors.count %>件のエラーが発生しました
  <ul>
    <% @destination.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class = "ml-5 mb-4 ">
 <h5>配送先編集</h5>
</div>
 <%= form_with model: @destination, url: update_destination_path, method: :patch, local: true do |f| %>

<div class = "row">
 <div class = "col-12" >
  <table class = "table table-borderless" >
   <tr>
    <td><%= f.label :郵便番号 %>
       <em>(ハイフンなし)</em></td>
    <td><%= f.text_field :postal %></td>
   </tr>
   <tr>
    <td> <%= f.label :住所 %></td>
    <td><%= f.text_field :address, :size=>"46" %></td>
   </tr>
   <tr>
    <td> <%= f.label :宛名 %></td>
    <td> <%= f.text_field :name %></td>
   </tr>
  </table>
 </div>
</div>

<div class = "row ml-5 " >
 <div class = "col-4" >
   <%= f.submit "変更内容を保存", class: "btn btn-success" %>
 </div>
</div>
 <% end %>
