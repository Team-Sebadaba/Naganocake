<div class = "ml-5 ">
  <h4>新規会員登録</h4>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

 <table class="table table-borderless">
   <tr>
    <td>名前</td>
    <td>
     <%= f.text_field :last_name, autofocus: true, required: true %>
     <%= f.text_field :first_name, autofocus: true, required: true %>
    </td>
   </tr>
   <tr>
    <td>フリガナ</td>
    <td>
     <%= f.text_field :last_furigana, autofocus: true, required: true %>
     <%= f.text_field :first_furigana, autofocus: true, required: true %>
    </td>
   </tr>
   <tr>
    <td>メールアドレス</td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
   </tr>
   <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal, autofocus: true, autocomplete: "postal" %></td>
   </tr>
   <tr>
    <td>住所</td>
    <td> <%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"46" %></td>
   </tr>
   <tr>
    <td>電話番号(ハイフンなし)</td>
    <td><%= f.text_field :tel, autofocus: true, autocomplete: "tel" %></td>
   </tr>
   <tr>
    <td>パスワード(6文字以上)</td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
   </tr>
   <tr>
    <td>パスワード(確認用)</td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    <td class="actions">
     <%= f.submit "新規登録",  class: "btn btn-success" %>
    </td>
   </tr>
  </table>

<% end %>

 <div class = "ml-5 ">
  <h4>既に登録済みの方</h4>
   <%= render "public/shared/links" %>
 </div>