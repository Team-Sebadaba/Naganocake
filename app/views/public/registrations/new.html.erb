<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

 <div class="field">
   <%= f.label :名前 %>
   <%= f.label :last_name, "(姓)" %>
   <%= f.text_field :last_name, autofocus: true, required: true %>
   <%= f.label :first_name, "(名)" %>
   <%= f.text_field :first_name, autofocus: true, required: true %>
</div>

<div class="field">
   <%= f.label :フリガナ %>
   <%= f.label :last_furigana, "(セイ)" %>
   <%= f.text_field :last_furigana, autofocus: true, required: true %>
   <%= f.label :first_furigana, "(メイ)" %>
   <%= f.text_field :first_furigana, autofocus: true, required: true %>
</div>

  <div class="field">
   <%= f.label :メールアドレス %>
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

<div class="field">
    <%= f.label :郵便番号 %>
    <em>(ハイフンなし)</em>
    <%= f.text_field :postal, autofocus: true, autocomplete: "postal" %>
  </div>

  <div class="field">
   <%= f.label :住所 %>
   <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
   <%= f.label :電話番号 %>
   <em>(ハイフンなし)</em>
   <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
   <%= f.label :パスワード %>
   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
   <% end %>
   <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
   <%= f.label :パスワード %>
   <em>(確認用)</em>
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
   <%= f.submit "新規登録",  class: "btn btn-success" %>
  </div>
<% end %>

<h4>既に登録済みの方</h4>
   <%= render "public/shared/links" %>
