<div class="row ml-2">
  <div class="caption">
   <h4>新規会員登録</h4>
  </div>
</div>

 <div class="row justify-content-around">
  <div class="col-9 px-5">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "public/shared/error_messages", resource: resource %>

 　<div class="field">
    <div class="label"><%= f.label :名前 %></div>
    <div class="input_text">
     <%= f.text_field :last_name, autofocus: true, required: true %>
     <%= f.text_field :first_name, autofocus: true, required: true %>
    </div>
  </div>

  <div class="field">
    <div class="label"><%= f.label :フリガナ %></div>
    <div class="input_text">
     <%= f.text_field :last_furigana, autofocus: true, required: true %>
     <%= f.text_field :first_furigana, autofocus: true, required: true %>
    </div>
  </div>

  <div class="field">
    <div class="label"><%= f.label :メールアドレス %></div>
    <div class="input_text"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %></div>
  </div>

  <div class="field">
    <div class="label"><%= f.label :郵便番号 %><em>(ハイフンなし)</em></div>
    <div class="input_text"><%= f.text_field :postal, autofocus: true, autocomplete: "postal" %></div>
  </div>

  <div class="field">
    <div class="label"><%= f.label :住所 %></div>
    <div class="input_text"><%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"46" %></div>
  </div>

  <div class="field">
    <div class="label"><%= f.label :電話番号 %><em>(ハイフンなし)</em></div>
    <div class="input_text"><%= f.text_field :tel, autofocus: true, autocomplete: "tel" %></div>
  </div>

   <div class="field">
    <div class="label"><%= f.label :パスワード %>
     <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
    <div class="input_text"><%= f.password_field :password, autocomplete: "current-password" %> </div>
   </div>

   <div class="field">
    <div class="label"><%= f.label :パスワード %><em>(確認用)</em></div>
    <div class="input_text"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    <%= f.submit "新規登録", class:"btn btn-success" %>
   </div>

   <% end %>
   </div>
  </div>

 <div class="caption">
  <h4>既に登録済みの方</h4>
 </div>

 <div class="sign_up_link">
  <%= render "public/shared/links" %>
 </div>