<div class = "container">
  <h2 class="mb-5">注文履歴一覧</h2>
  <table>
    <th>購入者</th>
    <th>注文日</th>
    <th>配送先</th>
    <th>支払方法</th>
    <th>注文</th>
  </table>
  <table class='table table-hover table-inverse'>
    <tr>
      <th>商品名</th>
      <th>単価(税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
    <% @Ditails.each do |ditail| %>
    <tr>
      <td><%= ditail.item.item_name %></td>
      <td><%= ditail.item.non_taxed * 1.1 %></td>
      <td><%= ditail.amount %></td>
      <!--<td>小計＊個数</td>-->
      <td><%= f.collection_select :item_status, Ditails.all, :id, :item_status %></td>
      <td><%= f.submit '更新', class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </table>
  <table>
    <td>商品合計</td>
    <td>送料</td>
    <td>請求金額合計</td>
  </table>
</dev