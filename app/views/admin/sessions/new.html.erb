<div class="row mb-5">
  <div class="caption">
   <h4>管理者ログイン</h4>
  </div>
</div>

<div class="row justify-content-around">
    <div class="col-sm-8 px-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="label"><%= f.label :メールアドレス %></div>
      <div class="input_text"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %></div>
    </div>
    <div class="field">
      <div class="label"><%= f.label :パスワード %></div>
      <div class="input_text"><%= f.password_field :password, autocomplete: "current-password", size: 40 %></div>
    </div>
    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
      <%= render "admin/shared/links" %>
    </div>
  <% end %>
  </div>
</div>
