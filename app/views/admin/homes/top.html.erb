<div class="container">
 <div class="col-lg-3 bg-light">
 <h2>注文履歴一覧</h2>
 </div>
 <table class='table table-hover table-inverse bg-light'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @details.each do |details| %>
    <tr>
      <td>
       <%= link_to details.created_at, admin_item_path(admin.items.id)  %>
      </td>
      <td>
       <!--注文idで注文テーブル→　会員id→　会員テーブルの中の名前を持ってきたい-->
       <%= details.name(last_name) %>
      </td>
      <td>
       <%= details.amount %>
      </td>
      <td>
       <%= details.item_status %>
      </td>
    </tr>
   <% end %>
  </tbody>
 </table>
 <%= paginate @details %>
</div>