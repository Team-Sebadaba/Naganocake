<div class="container">
 <div class="col-lg-3 bg-light">
 <h2>注文履歴一覧</h2>
 </div>
 <table class='table table-hover table-inverse bg-light'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @orders.each do |order| %>
    <tr>
      <td>
       <%= link_to order.created_at, admin_item_path(admin.items.id) %>
      </td>
      <td>
       <%= order.customer.last_name + first_name %>
      </td>
      <td>
       <%= order.detail.amount %>
      </td>
      <td>
       <%= order.detail.item_status %>
      </td>
    </tr>
   <% end %>
  </tbody>
 </table>
 <%= paginate @orders %>
</div>