<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class = "container">
 <h2>ジャンル一覧・追加<i class="fas fa-award"></i></h2>
  <div class = "row">

   <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <h4>ジャンル名</h4>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
   <% end %>

  </div>
  <div class = "row">
   <table class='table table-hover table-inverse'>
    <thead>
     <tr>
      <th>ジャンル</th>
      <th colspan="5"></th>
     </tr>
    </thead>
    <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td>
       <%= genre.name %>
      </td>
      <td>
       <%= link_to "編集する" , edit_admin_genre_path(genre.id) %>
      </td>
     </tr>
      <% end %>
    </tbody>
   </table>
  </div>
</div>