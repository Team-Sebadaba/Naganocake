<div class = "container">
  <h2 class="mb-5">商品一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
     <% @items.each do |item| %>
      <tr>
        <td>
         <%= item.id %>
        </td>
        <td>
         <%= item.item_name %>
        </td>
        <td>
         <%= item.non_taxed %>
        </td>
        <td>
         <%= item.genre_id %>
        </td>
        <td>
         <%if item.is_active == FALSE %>
          <h4 class="text-success">販売中</h4>
         <% else %>
          <h4 class="text-black-50">販売停止中</h4>
         <% end %>
        </td>
      </tr>
     <% end %>
    </tbody>
 </table>
 <%= paginate @items %>
  </div>
</div>