<div class="row mb-5">
  <div class="col-6">
    <div class="caption">
     <h4>商品一覧</h4>
    </div>
  </div>
  <div class="col-6">
    <div class="item_index_link">
      <%= link_to new_admin_item_path do %>
       <%= image_tag 'plus.jpg' %>
      <% end %>
    </dov>
  </div>
</div>

<table class='table table-hover table-inverse'>
  <thead class="table_title">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
    <tbody>
     <% @items.each do |item| %>
      <tr>
        <td>
         <%= item.id %>
        </td>
        <td>
         <%= link_to item.item_name, admin_item_path(item.id) %>
        </td>
        <td>
         <%= item.non_taxed %>
        </td>
        <td>
         <%= item.genre.name %>
        </td>
        <td>
         <%if item.is_active == true %>
          <h6 class="text-success">販売中</h6>
         <% else %>
          <h6 class="text-black-50">販売停止中</h6>
         <% end %>
        </td>
      </tr>
     <% end %>
    </tbody>
 </table>
 <%= render 'layouts/footer', obj: @items %>
  </div>
</div>