<div class = "container">
 <div class="row">
  <h2 class="mb-5">商品編集</h2>
 </div>
 <div class="row">
  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <dev class="field colspan mr-5">
      <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    </dev>
    <div class="field colspan mr-5">
      <h4>商品名</h4>
      <%= f.text_field :item_name %>
    </div>
    <div class="field colspan mr-5">
      <h4>商品説明</h4>
      <%= f.text_area :item_introduction %>
    </div>
    <div class="field colspan mr-5">
      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
    <div class="field colspan mr-5">
      <h4>税抜価格</h4>
      <%= f.text_field :non_taxed %>円
    </div>
    <div class="field colspan mr-5">
      <h4>販売ステータス</h4>
      <%= f.check_box :is_active %>販売中
      <%= f.check_box :is_active %>販売中止
    </div>
     <div class= "action">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
     </div>
  <% end %>
  </div>
</div>
