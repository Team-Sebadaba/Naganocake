<div class = "container">
 <div class="row">
  <h2 class="mb-5">商品編集</h2>
 </div>
 <div class="row">
  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
    <dev class="field colspan mr-5">
      <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    </dev>
    <div class="field colspan mr-5">
      <h4>商品名</h4>
      <%= f.text_field :item_name %>
    </div>
    <div class="field colspan mr-5">
      <h4>商品説明</h4>
      <%= f.text_area :item_introduction %>
    </div>
    <div class="field colspan mr-5">
      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
    <div class="field colspan mr-5">
      <h4>税抜価格</h4>
      <%= f.text_field :non_taxed %>円
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
       <label class="form-check-label" for="exampleRadios1">
         販売中
       </label>
     </div>
     <div class="form-check">
      <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
       <label class="form-check-label" for="exampleRadios2">
         販売中止
       </label>
     </div>
     <div class= "action">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
     </div>
      <%= link_to "削除", admin_item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
  </div>
</div>
