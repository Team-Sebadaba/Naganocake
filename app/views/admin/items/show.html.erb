<div class="row mb-5">
   <h4>商品詳細</h4>
</div>
<div class="row">
  <div class="col-3">
    <%= image_tag @item.get_image(200,160) %>
  </div>
  <div class="col-9">
    <div class="field">
      <div class="label">
        <h6>商品名<h6>
        <h6>商品説明<h6>
        <h6>ジャンル<h6>
        <h6>税込価格(税抜価格）<h6>
        <h6>販売ステータス<h6>
      </div>
      <div class="input_text">
        <h6><%= @item.item_name %></h6>
        <h6><%= @item.item_introduction %></h6>
        <h6><%= @item.genre.name %></h6>
        <h6><%= @item.non_taxed %></h6>
        <h6>
          <% if @item.is_active == true %>
            <h5 class="text-success">販売中</h5>
          <% else %>
            <h4 class="text-black-50">販売停止</h4>
          <% end %>
          <%= link_to "編集する" , edit_admin_item_path(@item.id), class:"btn btn-success" %>
        </h6>
      </div>
    </div>
  </div>
</div>