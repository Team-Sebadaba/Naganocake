<div class = "container">
  <h2 class="mb-5">商品詳細</h2>
  <table class='table table-hover table-inverse'>
    <tr>
      <td><%= image_tag @item.get_image %></td>
      <td>商品名<%= @item.item_name %></td>
      <td>商品説明<%= @item.item_introduction %></td>
      <td>ジャンル<%= @item.genre.name %></td>
      <td>税込価格(税抜価格）<%= @item.non_taxed %></td>
      <td>販売ステータス<%= @item.is_active %></td>
      <td><%= link_to "編集する" , edit_admin_item_path(@item.id) %></td>
    </tr>
  </table>
</div>