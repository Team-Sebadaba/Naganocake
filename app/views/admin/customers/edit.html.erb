<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h6 class="mb-5"><%= @customer.name %>さんの会員情報編集</h6>

 <div class="row">

  <div class="col-4">
    <h6>会員ID</h6>
    <h6>氏名</h6>
    <h6>フリガナ</h6>
    <h6>郵便番号</h6>
    <h6>住所</h6>
    <h6>電話番号</h6>
    <h6>メールアドレス</h6>
    <h6>会員ステータス</h6>
  </div>

  <div class="col-8">
      <h8><%= @customer.id %></h8>
   <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
   <div class="form-group">
    <div class="form-inline">
     <div class="field mr-5" >
      <h8><%= f.text_field :last_name %></h8>
     </div>
     <div class="field" >
      <h8><%= f.text_field :first_name %></h8>
     </div>
    </div>
    <div class="form-inline">
     <div class="field mr-5" >
      <h8><%= f.text_field :last_furigana %></h8>
     </div>
     <div class="field" >
      <h8><%= f.text_field :first_furigana %></h8>
     </div>
    </div>
     <div class="field mr-5" >
      <h8><%= f.text_field :postal %></h8>
     </div>
     <div class="field" >
      <h8><%= f.text_field :address %></h8>
     </div>
     <div class="field" >
      <h8><%= f.text_field :email %></h8>
     </div>
     <div class="form-check">
      <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
       <label class="form-check-label" for="exampleRadios1">
        有効
       </label>
     </div>
     <div class="form-check">
      <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
       <label class="form-check-label" for="exampleRadios2">
        退会
       </label>
     </div>
     <div class= "field">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
     </div>
   </div>
   <% end %>

  </div>

 </div>