<div class="row mb-5">
  <div class="col-md-5 offset-md-1">
    <h4><span class="title" style="background-color: #f5f5f5">会員一覧</span></h4>
  </div>
</div>

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @customers.each do |customer| %>
    <tr>
      <td>
       <%= customer.id %>
      </td>
      <td>
       <%= link_to customer.last_name, admin_customer_path(customer.id) %>
      </td>
      <td>
       <%= customer.email %>
      </td>
      <td>
       <% if customer.is_deleted == false %>
         <h4 class="text-success">有効</h4>
       <% else %>
         <h4 class="text-black-50">退会</h4>
       <% end %>
      </td>
    </tr>
   <% end %>
  </tbody>
 </table>
 <%= paginate @customers %>