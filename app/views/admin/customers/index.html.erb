<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>氏名</th>
      <th>会員ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to customer.name, admin_customers_path(customer.id) %>
          </td>
        <td>
          <% if customer.is_deleted==FALSE %>
           有効
          <% else %>
           退会
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>