<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="border border-secondary"></div>
      <nav class="navbar navbar-expand-sm navbar-light" style ="background-color: #d2b48c">
        <div class="container">
          <a class=navbar-brand href="/">
            <%= image_tag 'Naganocake.jpg', :size =>'90x55' %>
          </a>

          <% if customer_signed_in? %>
          <div class="collapse navbar-collapse justify-content-around" id="navbarNav4">
            <span class="navbar-text">
              ようこそ、<%= current_customer.last_name %>さん！
            </span>
          </div>
          <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="row">
            <div class="navbar-collapse collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li>
                  <%= link_to customers_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-user"></i>
                  マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-gifts"></i>
                  商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to cart_items_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-shopping-cart"></i>
                  カート
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link text-dark" do %>
                  <i class="fas fa-sign-out-alt"></i>
                  ログアウト
                  <% end %>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-gifts"></i>
                  商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-users"></i>
                  会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_root_path, class: "nav-link text-dark" do %>
                 <i class="fas fa-tasks"></i>
                  注文履歴一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_genres_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-birthday-cake"></i>
                  ジャンル一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-dark" do %>
                  <i class="fas fa-sign-out-alt"></i>
                  ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to about_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-asterisk"></i>
                  About
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-gifts"></i>
                  商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-user-plus"></i>
                  新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class: "nav-link text-dark" do %>
                  <i class="fas fa-sign-in-alt"></i>
                  ログイン
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_session_path, class: "nav-link text-dark" do %>
                  .
                  <% end %>
                </li>
              <% end %>
              </ul>
            </div>
          </div>
          <!--検索窓-->
          <!--<div class="row">-->
              <!--<div class="search_box">-->
          <!--      <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">-->
                <!--<button type = "submit"><i class="fa-solid fa-magnifying-glass fa-flip-horizontal" type="submit"></i></button>-->
          <!--</div>-->
        </div>
      </nav>
    <div class="border border-secondary"></div>
    </header>
    <main>
      <div class="container my-5">
      <%= yield %>
      </div>
    </main>
  <footer>
    <div class="fixed-bottom" style ="background-color: #d2b48c">
      <div class="border border-secondary"></div>
      <div class="container mb-5"></div>
    </div>
  </footer>
  </body>
</html>
